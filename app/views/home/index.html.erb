  <div class="absolute inset-[36px] border border-[#985920] pointer-events-none"></div>
  <div class="absolute inset-[46px] border border-[#985920] pointer-events-none"></div>
  <div class="absolute inset-[56px] border border-[#985920] pointer-events-none"></div>
  <div class="absolute inset-[66px] border border-[#985920] pointer-events-none"></div>

